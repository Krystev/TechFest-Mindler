<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/img_classroom"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/classroom3" />
    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#58000000" />



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:fontFamily="sans-serif"
        android:text="Teacher Login"
        android:textColor="@android:color/white"
        android:textSize="45sp"
        android:textStyle="bold" />

    <RelativeLayout
        android:id="@+id/grp_footer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">

        <ImageView
            android:id="@+id/img_white"
            android:layout_width="match_parent"
            android:layout_height="245dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:scaleType="centerCrop"
            android:src="@drawable/down" />


        <Button
            android:id="@+id/btn_login_teacher"
            android:background="@android:color/holo_blue_dark"
            android:layout_width="128dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edt_teacher_pass"
            android:layout_marginTop="24dp"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginBottom="128dp"
            android:text="Login"
            android:textColor="@android:color/background_light"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/edt_teacher_username"
            android:layout_width="256dp"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/img_white"
            android:layout_marginTop="32dp"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:gravity="center"
            android:hint="Username"
            android:textColor="#777"
            android:textSize="14sp" />

        <EditText
            android:hint="Password"
            android:id="@+id/edt_teacher_pass"
            android:layout_width="256dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/edt_teacher_username"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:gravity="center"
            android:textColor="#777"
            android:textSize="14sp" />
    </RelativeLayout>


</RelativeLayout>
