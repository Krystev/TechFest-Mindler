<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/img_classroom_final_result"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/classroom3" />

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#48000000" />

    <RelativeLayout
        android:id="@+id/grp_footer_final_result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">

        <ImageView
            android:id="@+id/img_white_final_result"
            android:layout_width="match_parent"
            android:layout_height="225dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:scaleType="centerCrop"
            android:src="@drawable/down" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="30sp"
            android:id="@+id/txt_final_result"
            android:layout_alignTop="@+id/img_white_final_result"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="85dp"/>


    </RelativeLayout>

</RelativeLayout>
